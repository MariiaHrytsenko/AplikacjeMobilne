<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".repository.MainActivity">

    <!-- Заголовок головного меню -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@android:color/holo_blue_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- Головне меню -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <!-- Кнопки задач -->
        <Button
            android:id="@+id/buttonTask1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Task 1"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonTask2"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Task 2"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonTask3"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Task 3"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />

        <!-- Кнопки для додавання слів і мов -->
        <Button
            android:id="@+id/buttonAddWordActivity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add new word"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />

        <Button
            android:id="@+id/buttonAddLanguageActivity"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Add new language"
            android:textSize="16sp"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
